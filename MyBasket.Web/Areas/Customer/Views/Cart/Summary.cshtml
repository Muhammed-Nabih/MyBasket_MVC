@model ShoppingCartVM
@using Microsoft.Extensions.Options

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout Page</title>
    <link href="~/css/summary.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

</head>
<body>
    <div class="container">
        <div class="py-5 text-center">
            <h2>Checkout </h2>
        </div>
        <div class="row">
            <div class="col-md-4 order-md-2 mb-4">
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">Your cart</span>
                    <span class="badge badge-secondary badge-pill">3</span>
                </h4>
                <ul class="list-group mb-3 sticky-top">

                    @foreach(var item in Model.CartList)
                    {
                        <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <h6 class="my-0">@item.Product.Name  x @item.Count </h6>
                        </div>
                            <span class="text-muted">$@item.Product.Price</span>
                    </li>
                    }
                    


                    <li class="list-group-item d-flex justify-content-between">
                        <span>Total (USD)</span>
                        <strong>$@Model.TotalCarts.ToString()</strong>
                    </li>
                </ul>
            </div>
            <div class="col-md-8 order-md-1">
                <h4 class="mb-3">Billing address</h4>
                <form class="needs-validation" novalidate="">
                    <div class="mb-3">
                        <label for="Name">Name</label>
                        <div class="input-group">
                            <input type="text" class="form-control" id="username" placeholder="Username" required="">
                            <div class="invalid-feedback" style="width: 100%;"> Your username is required. </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="Email">Email</label>
                        <input type="email" class="form-control" id="email" placeholder="you@example.com">
                        <div class="invalid-feedback"> Please enter a valid email address for shipping updates. </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="City">City</label>
                            <input type="text" class="form-control" id="City" placeholder="Cairo" value="" required="">
                            <div class="invalid-feedback"> Valid City is required. </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="Phone">Phone Number</label>
                            <input type="text" class="form-control" id="Phone" placeholder="01xxxxxxx" value="" required="">
                            <div class="invalid-feedback"> Valid Phone Number is required. </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="address">Address</label>
                        <input type="text" class="form-control" id="address" placeholder="1234 Main St" required="">
                        <span class="fas fa-check text-success pr-2"></span>
                        <div class="invalid-feedback"> Please enter your shipping address. </div>
                    </div>
                    <hr class="mb-4">
                    <a href="/Customer/Home/Index"> <button class="btn btn-primary btn-lg btn-block" type="submit">Submit</button> </a>
                </form>
            </div>
        </div>
        <footer class="my-2 pt-2 text-muted text-center text-small"></footer>
    </div>
</body>
</html>
